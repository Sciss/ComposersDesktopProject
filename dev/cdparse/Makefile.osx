CC=gcc
SFSYSROOT=../..
CDPLIB= $(SFSYSROOT)/lib
CFLAGS= -O -Wall -mmacosx-version-min=10.5 -arch i386 -Dunix -DIS_CDPARSE -D__MAC__ -I ../include -I $(SFSYSROOT)/include -L$(CDPLIB)
PROG=cdparse
BINS=cdparse.o

.c.o:
	$(CC) $(CFLAGS) -c $<
#
#	targets
#
all:	$(PROG)

$(PROG):	$(BINS)
	$(CC) $(CFLAGS) $(BINS) -o $(PROG) -lcdp2k -lsfsys

clean:
	rm -f *.o
	
veryclean:	clean
	rm -f $(PROG)

install:	$(PROG)
	cp $(PROG) ../Release


